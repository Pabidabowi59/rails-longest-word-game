<h1>New game</h1>
<% @grid.each do |letter| %>
<div class="letter">
  <span><%= letter.upcase %></span>
</div>
<% end %>
<form method="post" action="/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @grid %>
  <input type="text" name="word">
  <input type="submit" value="Play">
</form>
